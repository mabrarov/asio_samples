{
  "$id": "https://github.com/mabrarov/asio_samples/schemas/tcp-echo",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "containerName",
    "image",
    "livenessProbe",
    "readinessProbe",
    "replicaCount",
    "securityContext",
    "service",
    "tcpEcho",
    "test"
  ],
  "properties": {
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "labels": {
      "$ref": "/asio_samples/schemas/tcp-echo/labels"
    },
    "annotations": {
      "$ref": "/asio_samples/schemas/tcp-echo/annotations"
    },
    "deploymentLabels": {
      "$ref": "/asio_samples/schemas/tcp-echo/labels"
    },
    "deploymentAnnotations": {
      "$ref": "/asio_samples/schemas/tcp-echo/annotations"
    },
    "podLabels": {
      "$ref": "/asio_samples/schemas/tcp-echo/labels"
    },
    "podAnnotations": {
      "$ref": "/asio_samples/schemas/tcp-echo/annotations"
    },
    "containerName": {
      "type": "string",
      "minLength": 1
    },
    "image": {
      "$ref": "/asio_samples/schemas/tcp-echo/image"
    },
    "livenessProbe": {
      "$ref": "/asio_samples/schemas/tcp-echo/healthProbe"
    },
    "readinessProbe": {
      "$ref": "/asio_samples/schemas/tcp-echo/healthProbe"
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 1
    },
    "securityContext": {
      "type": "object",
      "required": [
        "readOnlyRootFilesystem",
        "runAsNonRoot"
      ],
      "properties": {
        "readOnlyRootFilesystem": {
          "type": "boolean"
        },
        "runAsNonRoot": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer",
          "minimum": 0
        },
        "runAsGroup": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "service": {
      "type": "object",
      "required": [
        "port",
        "nodePort"
      ],
      "properties": {
        "labels": {
          "$ref": "/asio_samples/schemas/tcp-echo/labels"
        },
        "annotations": {
          "$ref": "/asio_samples/schemas/tcp-echo/annotations"
        },
        "port": {
          "description": "service port",
          "$ref": "/asio_samples/schemas/tcp-echo/port"
        },
        "nodePort": {
          "description": "node port to expose the service on",
          "$ref": "/asio_samples/schemas/tcp-echo/port"
        }
      }
    },
    "tcpEcho": {
      "description": "configuration of application",
      "type": "object",
      "required": [
        "port"
      ],
      "properties": {
        "port": {
          "description": "TCP port number for incoming connections' listening",
          "$ref": "/asio_samples/schemas/tcp-echo/port"
        },
        "listenBacklog": {
          "description": "size of TCP listen backlog",
          "type": "integer",
          "minimum": 1
        },
        "inactivityTimeout": {
          "description": "timeout at one's expiration session will be considered as inactive and will be closed (seconds)",
          "type": "integer",
          "minimum": 0
        },
        "stopTimeout": {
          "description": "stop timeout at one's expiration server work will be terminated (seconds)",
          "type": "integer",
          "minimum": 0
        },
        "maxSessions": {
          "description": "maximum number of simultaneously active sessions",
          "type": "integer",
          "minimum": 1
        },
        "bufferSize": {
          "description": "session's buffer size (bytes)",
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "test": {
      "description": "configuration of test pod container",
      "type": "object",
      "required": [
        "containerName",
        "image",
        "message"
      ],
      "properties": {
        "podLabels": {
          "$ref": "/asio_samples/schemas/tcp-echo/labels"
        },
        "podAnnotations": {
          "$ref": "/asio_samples/schemas/tcp-echo/annotations"
        },
        "containerName": {
          "type": "string",
          "minLength": 1
        },
        "image": {
          "$ref": "/asio_samples/schemas/tcp-echo/image"
        },
        "message": {
          "description": "message to send for the test",
          "type": "string",
          "minLength": 1
        }
      }
    }
  },
  "$defs": {
    "labels": {
      "$id": "/asio_samples/schemas/tcp-echo/labels",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": [
        "object",
        "string"
      ]
    },
    "annotations": {
      "$id": "/asio_samples/schemas/tcp-echo/annotations",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": [
        "object",
        "string"
      ]
    },
    "image": {
      "$id": "/asio_samples/schemas/tcp-echo/image",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "required": [
        "registry",
        "repository",
        "pullPolicy"
      ],
      "properties": {
        "registry": {
          "type": "string",
          "minLength": 1
        },
        "repository": {
          "type": "string",
          "minLength": 1
        },
        "tag": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "pattern": "^(Always|Never|IfNotPresent)$"
        },
        "pullSecret": {
          "description": "docker authentication credentials for image registry",
          "type": "object",
          "required": [
            "username",
            "password",
            "email"
          ],
          "properties": {
            "username": {
              "type": "string",
              "minLength": 1
            },
            "password": {
              "type": "string",
              "minLength": 1
            },
            "email": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "healthProbe": {
      "$id": "/asio_samples/schemas/tcp-echo/healthProbe",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "required": [
        "initialDelay"
      ],
      "properties": {
        "initialDelay": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "port": {
      "$id": "/asio_samples/schemas/tcp-echo/port",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    }
  }
}
